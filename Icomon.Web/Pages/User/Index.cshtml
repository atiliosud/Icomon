@page
@model Icomon.Web.ViewModel.UserViewModel
@{
    ViewData["Title"] = string.Format("{0} - {1}", "User", Model.Name);
}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center">@Html.DisplayFor(model => model.Name)</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3>
                    @Html.DisplayFor(model => model.Registration)
                </h3>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


